mixin storeForm(store = {})
      form(action=`/add/${store._id || ''}` method="POST" class="card")
          label(for="name") Name
          input(type="text" name="name" value=store.name)

          label(for="description") Description
          input(type="text" name="description" value=store.description)

          label(for="address") address
          input(type="text" name="location[address]" value=(store.location && store.location.address))

          label(for="lng") Longitude
          input(type="number" id="lng" name="location[coordinates][0]" value=store.location.coordinates[0])

          label(for="ltd") Latitude
          input(type="number" id="ltd" name="location[coordinates][1]" value=store.location.coordinates[1])


          - const choices = ['Wifi', 'Open Late', 'Family Friendly' ,'Vegetarian', 'Licensed']
          - const tags = store.tags || []
          ul.tags
            each choice in choices
              .tag.tag__choice
                input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
                label(for=choice) #{choice }
          input(type="submit" value="Save ->" class="button")
